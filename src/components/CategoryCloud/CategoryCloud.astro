---
import { countItems, getAllPosts, sortByValue } from "@js/blogUtils";
import { getLocaleFromUrl } from "@js/localeUtils";
import { categorify } from "@js/textUtils";

import { getLocalizedRoute } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const posts = await getAllPosts(currLocale);
// Handle both category (singular) and categories (plural) for compatibility
const allCategories = posts.map((post) => {
	const cat = post.data.category || post.data.categories;
	return Array.isArray(cat) ? cat : (cat ? [cat] : []);
}).flat().filter(Boolean);
const countedCategories = countItems(allCategories);
const processedCategories = sortByValue(countedCategories);

interface Props {
	showCount?: boolean;
}

const { showCount = false } = Astro.props as Props;
---

<div class="flex flex-wrap justify-center gap-4">
	{
		processedCategories.map(([category, count]) => (
			<a
				href={getLocalizedRoute(currLocale, `/categories/${category}/`)}
				class="button button--outline"
			>
				{categorify(category)}
				{showCount && <span class="text-xs opacity-70">({count})</span>}
			</a>
		))
	}
</div>
