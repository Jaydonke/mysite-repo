---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE, PAGES_CONFIG, SITE_REFERENCES } from "@/lib/config";

// Get privacy data from config
const privacyData = PAGES_CONFIG?.privacy || {};
const title = privacyData.title || "Privacy Policy";
const description = privacyData.description || `Learn how ${SITE.title} collects, uses, and protects your personal information.`;
const subtitle = privacyData.subtitle || "Your privacy is important to us. This policy explains how we handle your information.";
const lastUpdated = privacyData.lastUpdated || "December 2024";
const introduction = privacyData.introduction || `${SITE.title} is committed to protecting your privacy. This Privacy Policy explains how we collect, use, disclose, and safeguard your information.`;
const sections = privacyData.sections || [];

// Get site name for dynamic replacement
const siteName = SITE.title;
const siteUrl = SITE.url?.replace('https://', '').replace('http://', '') || 'our website';
const privacyEmail = privacyData.contactEmail || SITE_REFERENCES?.privacyEmail || `privacy@${siteUrl}`;
---

<BaseLayout title={title} description={description}>
  <section class="site-container">
    <div class="mx-auto max-w-4xl pt-24 md:pt-36 pb-12">
      <h1 class="h1 text-center mb-2">{title}</h1>
      <p class="text-center text-lg text-gray-600 dark:text-gray-400 mb-4">{subtitle}</p>
      <div class="flex justify-center mb-8">
        <div class="inline-flex items-center px-4 py-2 bg-blue-50 dark:bg-blue-900/20 rounded-full">
          <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium text-blue-600 dark:text-blue-400">
            Last Updated: {lastUpdated}
          </span>
        </div>
      </div>
      <hr class="bg-primary-600/50 mx-auto mt-4 mb-12 max-w-[30%] rounded-full border-none pt-1" />
      
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8 md:p-12">
        
        <!-- Introduction -->
        <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            {introduction.replace(/PopZic/g, siteName)}
          </p>
        </div>

        <!-- Table of Contents -->
        <div class="mb-12 p-6 bg-gray-50 dark:bg-gray-900 rounded-lg">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Navigation</h2>
          <div class="grid md:grid-cols-2 gap-2">
            {sections.map(section => (
              <a href={`#${section.id}`} class="text-blue-600 dark:text-blue-400 hover:underline">
                â†’ {section.title}
              </a>
            ))}
          </div>
        </div>

        <!-- Sections -->
        <div class="space-y-12">
          {sections.map((section) => (
            <section id={section.id}>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-3 border-b border-gray-200 dark:border-gray-700">
                {section.title}
              </h2>
              
              {section.content && (
                <p class="text-gray-600 dark:text-gray-300 mb-6">
                  {section.content.replace(/PopZic/g, siteName)}
                </p>
              )}
              
              {/* Subsections for Information We Collect */}
              {section.subsections && (
                <div class="space-y-6">
                  {section.subsections.map(subsection => (
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
                        {subsection.title}
                      </h3>
                      {subsection.content && (
                        <p class="text-gray-600 dark:text-gray-300 mb-3">
                          {subsection.content}
                        </p>
                      )}
                      {subsection.items && (
                        <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                          {subsection.items.map(item => (
                            <li>{item}</li>
                          ))}
                        </ul>
                      )}
                    </div>
                  ))}
                </div>
              )}
              
              {/* Uses list for How We Use section */}
              {section.uses && (
                <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                  {section.uses.map(use => (
                    <li>{use}</li>
                  ))}
                </ul>
              )}
              
              {/* Circumstances for Information Sharing */}
              {section.circumstances && (
                <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6">
                  <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                    {section.circumstances.map(circumstance => (
                      <li>{circumstance}</li>
                    ))}
                  </ul>
                </div>
              )}
              
              {/* Rights list for Your Rights section */}
              {section.rights && (
                <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-6">
                  <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                    {section.rights.map(right => (
                      <li>{right}</li>
                    ))}
                  </ul>
                </div>
              )}
              
              {/* Contact section */}
              {section.contactEmail && (
                <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-lg p-8 text-center mt-6">
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">
                    Questions About Privacy?
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 mb-6">
                    {section.content || "If you have any questions about this Privacy Policy, please contact us."}
                  </p>
                  <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href={`mailto:${section.contactEmail || privacyEmail}`}
                       class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                      Email Privacy Team
                    </a>
                    <a href="/contact" 
                       class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                      </svg>
                      Contact Form
                    </a>
                  </div>
                </div>
              )}
            </section>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>